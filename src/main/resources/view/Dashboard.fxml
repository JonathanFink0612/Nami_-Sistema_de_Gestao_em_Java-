<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21.0.7" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.exemplo.controllers.DashboardController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="15.0" style="-fx-background-color: #1a202c;">
            <padding>
                <Insets left="15.0" right="20.0" />
            </padding>
            <children>
                <!-- CORRIGIDO AQUI -->
                <Button fx:id="menuButton" onAction="#handleToggleSidebar" style="-fx-background-color: transparent; -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image><Image url="@../img/img1].png" /></image>
                        </ImageView>
                    </graphic>
                </Button>
                <Label fx:id="titleLabel" text="Início" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" />
            </children>
        </HBox>
    </top>

    <left>
        <VBox fx:id="sidebar" prefWidth="220.0" spacing="10.0" style="-fx-background-color: #1a202c;">
            <padding>
                <Insets top="20.0" />
            </padding>
            <children>
                <HBox alignment="CENTER" prefHeight="60.0" spacing="10.0" fx:id="logoBox">
                    <children>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                            <image><Image url="@../img/img1.png" /></image>
                        </ImageView>
                        <Label fx:id="logoLabel" text="Meu App" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;" />
                    </children>
                </HBox>

                <!-- CORRIGIDO EM TODOS OS BOTÕES ABAIXO -->
                <Button fx:id="btnInicio" onAction="#handleDashboard" text="Início" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: #a0aec0; -fx-font-size: 14px; -fx-alignment: center-left; -fx-padding: 10 10 10 30; -fx-cursor: hand;">
                    <graphic><ImageView fitHeight="20" fitWidth="20" preserveRatio="true"><image><Image url="@../img/img1].png"/></image></ImageView></graphic>
                </Button>
                <Button fx:id="btnVendas" onAction="#handleVendas" text="Vendas" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: #a0aec0; -fx-font-size: 14px; -fx-alignment: center-left; -fx-padding: 10 10 10 30; -fx-cursor: hand;">
                    <graphic><ImageView fitHeight="20" fitWidth="20" preserveRatio="true"><image><Image url="@../img/img1].png"/></image></ImageView></graphic>
                </Button>
                <Button fx:id="btnCadastro" text="cadastro"  onAction="#handlecadastro" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: #a0aec0; -fx-font-size: 14px; -fx-alignment: center-left; -fx-padding: 10 10 10 30; -fx-cursor: hand;">
                    <graphic><ImageView fitHeight="20" fitWidth="20" preserveRatio="true"><image><Image url="@../img/img1].png"/></image></ImageView></graphic>
                </Button>

                <Button text="Clientes" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: #a0aec0; -fx-font-size: 14px; -fx-alignment: center-left; -fx-padding: 10 10 10 30; -fx-cursor: hand;">
                    <graphic><ImageView fitHeight="20" fitWidth="20" preserveRatio="true"><image><Image url="@../img/img1].png"/></image></ImageView></graphic>
                </Button>
                <Button text="Relatórios" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: #a0aec0; -fx-font-size: 14px; -fx-alignment: center-left; -fx-padding: 10 10 10 30; -fx-cursor: hand;">
                    <graphic><ImageView fitHeight="20" fitWidth="20" preserveRatio="true"><image><Image url="@../img/img1].png"/></image></ImageView></graphic>
                </Button>

                <Region VBox.vgrow="ALWAYS" />

                <Button fx:id="btnSair" onAction="#handleSair" text="Sair" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: #a0aec0; -fx-font-size: 14px; -fx-alignment: center-left; -fx-padding: 10 10 10 30; -fx-cursor: hand;">
                    <graphic><ImageView fitHeight="20" fitWidth="20" preserveRatio="true"><image><Image url="@../img/img1].png"/></image></ImageView></graphic>
                    <VBox.margin><Insets bottom="20.0" /></VBox.margin>
                </Button>
            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f7fafc;" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>